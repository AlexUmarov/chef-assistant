<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Chefassistant" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#409DDB</item>
        <item name="colorPrimaryVariant">#409DDB</item>
        <item name="colorOnPrimary">#343535</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#FF8C00</item>
        <item name="colorSecondaryVariant">#05D7EA</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Chefassistant.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Chefassistant.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Chefassistant.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>